<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CoroutineScopeFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/btn_launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start coroutine in lifecyclescope"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_launch_in_custom_coroutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start my custom coroutine"
        app:layout_constraintTop_toBottomOf="@id/btn_launch"
        app:layout_constraintStart_toStartOf="@id/btn_launch"/>

    <Button
        android:id="@+id/btn_launch_in_io"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start my io coroutine"
        app:layout_constraintTop_toBottomOf="@id/btn_launch_in_custom_coroutine"
        app:layout_constraintStart_toStartOf="@id/btn_launch_in_custom_coroutine"/>

    <Button
        android:id="@+id/btn_fetch_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fetch profile data"
        app:layout_constraintTop_toBottomOf="@id/btn_launch_in_io"
        app:layout_constraintStart_toStartOf="@id/btn_launch_in_io"/>

</androidx.constraintlayout.widget.ConstraintLayout>